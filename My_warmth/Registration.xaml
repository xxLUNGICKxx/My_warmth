<Page x:Class="My_warmth.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:My_warmth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Регистрация" HorizontalAlignment="Center" FontSize="30"/>
        <Button Grid.Row="1" Width="100" Height="30" VerticalAlignment="Top" Margin="0 0 110 0" Content="Физ. лицо" FontSize="18" Click="Legal_Click"/>
        <Button Grid.Row="1" Width="100" Height="30" VerticalAlignment="Top" Margin="110 0 0 0" Content="Юр. лицо" FontSize="18" Click="Individual_Click"/>
        <Frame Grid.Row="2" Name="RegistrationFrame">
            
        </Frame >
    </Grid>
</Page>
